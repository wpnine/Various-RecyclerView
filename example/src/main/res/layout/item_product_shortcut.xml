<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/tv_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_goods_pic"
        android:layout_alignRight="@+id/iv_goods_pic"
        android:layout_below="@+id/iv_goods_pic"
        android:textColor="@color/font_primary"
        android:textSize="@dimen/font_normal"
        tools:text="工fdljffljdf"
        />


    <TextView
        android:id="@+id/tv_actual_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_goods_title"
        android:layout_below="@+id/tv_goods_title"
        android:textColor="@color/font_midle_yellow"
        android:textSize="@dimen/font_normal"
        tools:text="¥12"
        android:layout_marginBottom="10dp"
        />



    <TextView
        android:id="@+id/tv_origin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_actual_price"
        android:layout_alignBottom="@+id/tv_actual_price"
        android:textColor="@color/font_negative"
        android:textSize="12sp"
        tools:text="¥12"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="2dp"
        />




</RelativeLayout>